rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users collection
    match /users/{userId} {
      // Authenticated users can read any user profile (for displaying names in expenses, groups, etc.)
      allow read: if isAuthenticated();
      
      // Users can create their own profile during signup
      allow create: if isOwner(userId);
      
      // Users can update their own profile
      allow update: if isOwner(userId);
      
      // Users cannot delete their profile
      allow delete: if false;
    }
    
    // Groups collection
    match /groups/{groupId} {
      // Allow authenticated users to read groups (both get and list)
      allow read: if isAuthenticated();
      
      // Authenticated users can create groups
      allow create: if isAuthenticated() && 
                       request.resource.data.created_by == request.auth.uid &&
                       request.auth.uid in request.resource.data.members;
      
      // Group creator or members can update groups (including joining)
      allow update: if isAuthenticated();
      
      // Only group creator can delete groups
      allow delete: if isAuthenticated() && request.auth.uid == resource.data.created_by;
      
      // Group members subcollection
      match /members/{memberId} {
        // Authenticated users can read members of groups they belong to
        allow read: if isAuthenticated();
        
        // Authenticated users can create member records
        allow create: if isAuthenticated();
        
        // Group creator can update member roles
        allow update: if isAuthenticated();
        
        // Group creator can remove members
        allow delete: if isAuthenticated();
      }
    }
    
    // Expenses collection
    match /expenses/{expenseId} {
      // Authenticated users can read expenses
      allow read: if isAuthenticated();
      
      // Authenticated users can create expenses
      allow create: if isAuthenticated();
      
      // Expense creator can update
      allow update: if isAuthenticated();
      
      // Expense creator can delete
      allow delete: if isAuthenticated();
    }
    
    // Custom filters collection
    match /custom_filters/{filterId} {
      // Users can read their own filters
      allow read: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      
      // Users can create their own filters
      allow create: if isAuthenticated() && 
                       request.resource.data.user_id == request.auth.uid;
      
      // Users can update their own filters
      allow update: if isAuthenticated() && resource.data.user_id == request.auth.uid;
      
      // Users can delete their own filters
      allow delete: if isAuthenticated() && resource.data.user_id == request.auth.uid;
    }
    
    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
